---
interface Props {
	enlaceimg?: string;
	iframe?: any;
	titleC?: string;
	titleD?: string;
	descripcion?: string;
}

const { enlaceimg, iframe, titleC, titleD, descripcion } = Astro.props;
---

<style>
	/* Estilo para ocultar el modal por defecto */

	.modal {
		display: none;
		position: fixed;
		z-index: 1;
		left: 0;
		top: 0;
		width: 100%;
		height: 100%;
		overflow: auto;
		background-color: rgba(0, 0, 0, 0.7);
	}

	/* Estilo para el contenido del modal */

	.modal-content {
		margin: 15% auto;
		padding: 20px;
		width: 70%;
		background-color: #fefefe;
	}

	/* Estilo para el botón de cerrar */

	.close {
		color: #aaa;
		float: right;
		font-size: 28px;
		font-weight: bold;
	}

	.close:hover,
	.close:focus {
		color: black;
		text-decoration: none;
		cursor: pointer;
	}

	/* Estilo para el contenedor de video y descripción */

	.video-container {
		display: flex;
		justify-content: space-between;
	}

	/* Estilo para la descripción al lado del video */

	.description {
		flex: 1;
		padding-left: 20px;
		/* Ajusta el espaciado según tus preferencias */
	}

	/* Estilo para la descripción */

	.description h2 {
		margin-bottom: 10px;
		color: #000;
	}

	.description p {
		color: #000;
	}
</style>

<div class="video">
	<div class="contenido-video">
		<div class="iframe-video">
			<img id="openModalBtn" src={enlaceimg} alt="Abrir Modal" />
			<div id="myModal" class="modal">
				<div class="modal-content">
					<span id="closeModalBtn" class="close">&times;</span>
					<div class="video-container">
						{iframe}
						<div class="description">
							<h2>{titleD}</h2>
							<p>{descripcion}</p>
						</div>
					</div>
				</div>
			</div>
			<h3>{titleC}</h3>
		</div>
	</div>

	<iframe
		width="560"
		height="315"
		src="https://www.youtube.com/embed/86awpOnnOhE?si=XilFC95ciVUPLTTW"
		title="YouTube video player"
		frameborder="0"
		allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
		allowfullscreen></iframe>

	<script>
		// Obtener referencias a elementos del DOM
		const img = document.getElementById('openModalBtn');
		const modal = document.getElementById('myModal');
		const span = document.getElementById('closeModalBtn');

		// Eventos para abrir los modales al hacer clic en las imágenes
		img.onclick = function () {
			modal.style.display = 'block';
		};

		// Eventos para cerrar los modales al hacer clic en la "X"
		span.onclick = function () {
			modal.style.display = 'none';
		};

		// Eventos para cerrar los modales si se hace clic fuera de ellos
		window.onclick = function (event) {
			if (event.target == modal) {
				modal.style.display = 'none';
			}
		};
	</script>
</div>
